FROM node:20.11.0-alpine AS build

WORKDIR /app   
COPY . /app
ARG BASE_DOMAIN_WITH_PROTOCOL
ENV NEXT_PUBLIC_BASE_DOMAIN_WITH_PROTOCOL=${BASE_DOMAIN_WITH_PROTOCOL}
ARG BASE_SUPERAPP_WEB_PATH
ENV NEXT_PUBLIC_BASE_WEB_PATH=${BASE_SUPERAPP_WEB_PATH}
ARG BASE_SUPERAPP_SERVER_PATH
ENV NEXT_PUBLIC_BASE_SERVER_PATH=${BASE_SUPERAPP_SERVER_PATH}
ARG SUPERAPP_SUPABASE_URL
ENV NEXT_PUBLIC_SUPABASE_URL=${SUPERAPP_SUPABASE_URL}
ARG SUPERAPP_SUPABASE_ANON_KEY
ENV NEXT_PUBLIC_SUPABASE_ANON_KEY=${SUPERAPP_SUPABASE_ANON_KEY}
RUN npm install --production
RUN npm run build
EXPOSE 3000

ENTRYPOINT [ "npm", "start" ]