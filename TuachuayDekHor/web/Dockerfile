FROM node:20.11.0-alpine AS build

WORKDIR /app   
COPY . /app
ARG BASE_DOMAIN_WITH_PROTOCOL
ENV BASE_DOMAIN_WITH_PROTOCOL=${BASE_DOMAIN_WITH_PROTOCOL}
ARG BASE_BLOG_WEB_PATH
ENV BASE_WEB_PATH=${BASE_BLOG_WEB_PATH}
ARG BASE_BLOG_SERVER_PATH
ENV BASE_SERVER_PATH=${BASE_BLOG_SERVER_PATH}
ARG BLOG_SUPABASE_URL
ENV SUPABASE_URL=${BLOG_SUPABASE_URL}
ARG BLOG_SUPABASE_ANON_KEY
ENV SUPABASE_ANON_KEY=${BLOG_SUPABASE_ANON_KEY}

RUN npm install --omit=dev
RUN npm run build
EXPOSE 3000

ENTRYPOINT [ "npm", "start" ]